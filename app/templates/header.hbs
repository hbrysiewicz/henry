{{#if token}}
<div class="header">
  <div class="container">
    <div class="row">

      <div class="col-md-3">
        <div class="logo">
          <h1>{{#link-to 'index' tagNames='a'}}Admin{{/link-to}}</h1>
        </div>
      </div>

      <div class="col-md-9">
        <div class="navbar navbar-inverse" role="banner">
          <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
              <span>Menu</span>
            </button>
          </div>
          <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
            <ul class="nav navbar-nav">
              {{#if user.admin}}
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="fa fa-wrench"></i>
                  Admin
                  <b class="caret"></b>
                </a>

                <ul class="dropdown-menu dropdown-big animated fadeInUp">
                  <div class="dropdown-body">
                    <li><a href="#">User Management</a></li>
                    <li><a href="#">User Roles</a></li>
                    <li><a href="#">Resources</a></li>
                    <li><a href="#">Application Management</a></li>
                    <li><a href="#">Activity Log</a></li>
                  </div>
                </ul>
              </li>
              {{/if}}
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  {{#if user.icon}}
                    <img {{bind-attr src="user.icon"}} class='avatar' />
                  {{/if}}
                  {{user.name}}
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu animated fadeInUp">
                  <li>{{#link-to 'user.settings' user tagNames='a'}}User Settings{{/link-to}}</li>
                  <li>{{#link-to 'logout' tagNames='a'}}Logout{{/link-to}}</li>
                </ul>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

{{else}}
<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <!-- Logo -->
        <div class="logo text-center">
          <h1>{{#link-to 'index' tagNames='a'}}Admin{{/link-to}}</h1>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}