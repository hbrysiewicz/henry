<div class="row">
  <div class="col-md-12">
    <div class="awidget login-reg">
      <div class="awidget-head"></div>
      <div class="awidget-body">
        <!-- Page title -->
        <div class="page-title text-center">
          <h2>Login</h2>
          <hr />
        </div>
        <!-- Page title -->

        <br />
        <form class="form-horizontal" role="form" {{action login on="submit"}}>
          <div class="form-group">
            <label for="username" class="col-lg-2 control-label">Username</label>
            <div class="col-lg-10">
              {{input id="username" classNames="form-control" placeholder="Username" value=username}}
            </div>
          </div>
          <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
              {{input type="password" id="password" classNames="form-control" placeholder="Password" value=password}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Remember me
                </label>
              </div>
            </div>
          </div>
          <hr />
          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              {{input type="submit" classNames="btn btn-info" value="Sign In"}}
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>